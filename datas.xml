<?xml version="1.0" encoding="utf-8"?>
<MyConfig>
    <!-- Mesh Information -->
    <Data name="lx" value="2.0"></Data>
    <Data name="ly" value="1.0"></Data>
    <Data name="Nx" value="20"></Data>
    <Data name="Ny" value="10"></Data>
    <Data name="shape" value="rectangle"></Data>

    <!-- Dirichlet Boundary Conditions -->
    <Data name="u_AB" value="free"></Data>
    <Data name="u_BC" value="2.0"></Data>
    <Data name="u_CD" value="free"></Data>
    <Data name="u_AD" value="1.0"></Data>

    <!-- Input Functions -->
    <Data name="guess" value="exp(-x-y)"></Data>
    <Data name="source" value="exp(-u)"></Data>
    <Data name="source_derivative" value="-exp(-u)"></Data>

    <!-- Tolerance of error -->
    <Data name="abs_tol" value="1e-4"></Data>
    <Data name="rel_tol" value="1e-4"></Data>
    
    <!-- Output file directory -->
    <Data name="output_file_dir" value="./2DPoisson.vtk"></Data>
</Myconfig>